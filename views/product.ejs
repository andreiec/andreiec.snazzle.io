            <!-- MAIN CONTENT OF THE PAGE-->
            <main>
                <div id="content">
                    <div class="product-div">
                        <div class="inner-width-product">
                            <span class="product-info">
                                <h1><%= name %></h1>
                                <p class="product-desc">Developer: <%= dev %></p><br><br>
                                <h2>Description:</h2>
                                <p><%= desc %></p><br>
                                <h2>Price: <%= price %></h2>
                                <button type="submit" class="product-btn">Purchase</button>
                            </span>
                            <span class="product-img">
                                <img src="/static/images/GameCovers/<%= id %>_library_600x900.jpg" class="game-page-image" alt="image loading error">
                            </span>
                        </div>
                    </div>
                    <div class="product-div">
                        <div class="inner-width-product-recommended">
                            <h2>You also might enjoy</h2>
                            <div class="product-recommended">
                                <% recommended.forEach(function(game) { %>
                                    <a href="/games/<%= game['id'] %>">
                                        <div class="game-card-recommended">
                                            <img class="game-card-image" src="/static/images/GameCovers/<%= game['id'] %>_library_600x900.jpg" alt="game logo loading error">
                                            <div class="game-card-description">
                                                <div class="game-card-description-name"><%= game['name'] %></div>
                                                <div class="game-card-description-price"><%= game['price'] %></div>
                                                <div class="game-card-description-dev">Developer: <%= game['dev'] %></div>
                                                <div class="game-card-description-desc"><%= game['desc'] %></div>
                                            </div>
            
                                        </div>
                                    </a>
                                    <% }) %>
                            </div>
                        </div>
                        <div class="product-margin"></div>
                    </div>
                </div>
            </main>
            <footer class="product-footer"></footer>
